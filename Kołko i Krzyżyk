btn1 = Button(window, text="", width=2, height=1, bg='#ffffff', fg='#ffffff', activebackground='#ffffff', activeforeground='#ffffff', font=helv36, command = MarkField1)
btn1.grid(column=1, row=0)



btn2 = Button(window, text="", width=2, height=1, bg='#ffffff', fg='#ffffff', activebackground='#ffffff', activeforeground='#ffffff', font=helv36, command = MarkField2)
btn2.grid(column=2, row=0)

