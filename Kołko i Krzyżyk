from tkinter import *
 
window = Tk()

window.title("Kółko i Krzyżyk")
 
window.geometry('270x270')

helv36 = ('Courier', 40, 'normal')

player1 = 'x'
player2 = 'o'
roundof = player2
def MarkField1():
    global player1
    global player2
    global roundof
    btn1["text"] = roundof
    if roundof == player2:
        roundof = player1
    else:
        roundof = player2
    if btn1["text"] + btn2["text"] + btn3["text"] == "xxx":
        print ("X WIN")
    if btn1["text"] + btn4["text"] + btn7["text"] == "xxx":
        print ("X WIN")
    btn1["state"] = 'disabled'     
def MarkField2():
    global player1
    global player2
    global roundof

    btn2["text"] = roundof
    if roundof == player2:
        roundof = player1
    else:
        roundof = player2
    btn2["state"] = 'disabled'   
def MarkField3():
    global player1
    global player2
    global roundof

    btn3["text"] = roundof
    if roundof == player2:
        roundof = player1
    else:
        roundof = player2
    btn3["state"] = 'disabled'  
